  <div class="home_content">
        
    <div class="text">Dashboard</div>
 
   
    
  

    <center>
    <div style="align-content: center;">
      <div class="form_wrapper">
        <div class="form_container">
            <div class="title_container">
                <h2>View Appointment</h2>
            </div>

            <div class="row clearfix">
               <div>
                 <form id="customerForm">
             
                 </form>
               </div>
             </div>


            <div class="row clearfix">
                <div>
                    <form id="EmployeeForm">
                        <div class="row clearfix">
                          <div class="col_half">
                            <div class="autocomplete" style="width:320px;">
                              <input id="Empsearch" type="text" name="Empsearch" placeholder="Search Employee Name or Tel">
                              <input type="text" id="employeeid" name="employeeid" hidden>
                            </div>
                            
                          </div> 
                            <div class="col_half">
                              <div class="input_field">
                                         
                                <span>
                                <i aria-hidden="true">
                                    <select id="employee_dropdown" onchange="moveToSelectedName(this)" class="custom_dropdown" >
                                        <option value="" selected disabled hidden class="selection">Select Name</option>
                                        <!-- Options will be populated by JavaScript -->
                                    </select>
                                </i>
                                </span> 
                                </div> 
                              </div>

                        </div>
                       
                        <input class="button" style="background-color: rgb(111, 115, 221);width:50%;"  type="submit" value="Find Appoinment" /> 

                    </form>
                </div>
            </div>
        </div>
    </div> 
</div> 
</center>
<main class="cd__main">
   <div id='calendar'></div>
   <div class="modal fade" id="form" tabindex="-1" aria-labelledby="formLabel" aria-hidden="true">
      <div class="modal-dialog">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="modal-title">ADD Appoinment</h5>
               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" value="ADD Appoinment"></button>
            </div>
            <div class="modal-body">
               <form id="event-form">
                  <label for="event-title" class="form-label">Customer Name</label>
                  <div class="row clearfix" style="display: flex;">
                    <div class="col_half">
                      <div class="search-container" style="margin-left:0px;margin-top: -0px;">
                        <input list="customerOptions" type="text" id="event-title" name="event-title" placeholder="Search Customer Name or Tel">
                        <input type="text" id="customerid" name="customerid"  hidden>
                      </div> 
                    </div> 
                    <div class="col_half">
                  <div class="input_field">

                    <span>
                    <i aria-hidden="true">
                        <select id="customer_dropdown1" onchange="moveToSelectedCName(this)" class="customer_dropdown1">
                            <option value="" selected disabled hidden class="selection">Select Name</option>
                            <!-- Options will be populated by JavaScript -->
                        </select>
                    </i>
                    </span> 
                    </div> 
                  </div>
             
                </div>
                  <div class="mb-3">
                    <label for="event-contact" class="form-label">Customer Tel</label>
                    <input type="text" class="form-control" id="event-contact" required>
                 </div>

                 <div class="mb-3">
                  <label for="event-address" class="form-label">Address</label>
                  <input type="text" class="form-control" id="event-address" required>
               </div>
                 <label for="event-employee" class="form-label">Hired employee Name</label>
                 <div class="row clearfix" style="display: flex;">
                  <div class="col_half">
                      <div class="autocomplete" style="width:320px;">
                          <input id="event-employee" type="text" name="event-employee" placeholder="Search Name or Tel">
                          <input type="text" id="Aemployeeid" name="Aemployeeid" hidden>
                      </div>
                  </div>
                  <div class="col_half" style="margin-left:-30px;">
                      <div class="input_field">
                          <span>
                              <i aria-hidden="true">
                                  <select id="employee_dropdown2" onchange="moveToSelectedEname(this)" class="employee_dropdown2">
                                      <option value="" selected disabled hidden class="selection">Select Name</option>
                                      <!-- Options will be populated by JavaScript -->
                                  </select>
                              </i>
                          </span>
                      </div>
                  </div>
              </div>
              
              <div class="row clearfix" style="display: flex;margin-top:10px;">
                  <div class="col_half">
                      <div class="form-group">
                          <label for="selectedServices">Used Services</label><br>
                          <select id="selectedServices" name="selectedServices[]" multiple required></select>
                          <button id="removeServiceButton" style="margin-top: 10px;">Remove Selected</button>
                      </div>
                  </div>
                  <div class="col_half" style="margin-left:-30px;">
                      <div class="input_field">
                          <span>
                              <i aria-hidden="true">
                                  <select id="service_dropdown" class="service_dropdown">
                                      <option value="" selected disabled hidden class="selection">Select Service</option>
                                      <!-- Options will be populated by JavaScript -->
                                  </select>
                              </i>
                          </span>
                      </div>
                  </div>
              </div>
                
                  <div class="mb-3">
                     <label for="start-date" class="form-label">Start Date</label>
                     <input type="datetime-local" class="form-control" id="start-date" required>
                  </div>
                  <div class="mb-3">
                     <label for="end-date" class="form-label">End Date</label>
                     <input type="datetime-local" class="form-control" id="end-date" required>
                  </div>
                  <div class="mb-3">
                    <label for="event-status" class="form-label">Appointment Status</label>
                    <select id="status_dropdown" class="status_dropdown">
                      <option value="Pending">Pending</option>
                      <option value="Postpone">Postpone</option>
                      <option value="Cancel">Cancel</option>
                  </select>
                 </div>
                  <div class="mb-3" hidden>
                     <label for="event-color" class="form-label">Event Color</label>
                     <input type="color" class="form-control" id="event-color" >
                  </div>
                  <div class="alert alert-danger" id="danger-alert" style="display:none;">
                     End date must be after start date.
                  </div>
                  <div style="display: flex;">
                     <button type="submit" class="btn btn-success" id="submit-button" style="border-radius:initial;font-size: medium;">Add Event</button>
                  <button type="button" class="btn btn-danger" id="delete-button" style="margin-left: 20px;">Delete Event</button>
                  </div>
                 
               </form>
            </div>
         </div>
      </div>
   </div>
   
   <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
      <div class="modal-dialog">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="deleteModalLabel">Delete Event</h5>
               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               Are you sure you want to delete this event?
            </div>
            <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
               <button type="button" class="btn btn-danger" id="confirm-delete-button">Delete</button>
            </div>
         </div>
      </div>
   </div>
